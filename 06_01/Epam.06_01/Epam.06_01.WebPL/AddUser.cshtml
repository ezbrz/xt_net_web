@using Epam._06_01.BLL.Interfaces;
@using Epam._06_01.Entities;
@using Epam._06_01.Handlers;
@using Epam._06_01.IOC;
@{
    Layout = null;
    IUserLogic userLogic = DependencyResolver.UserLogic;
    IAwardLogic awardLogic = DependencyResolver.AwardLogic;
    string PageTitle = "Add new user";
    if (IsPost)
    {
        var newUserName = Request["inputName"];
        uint newUserId = 0;
        string elem;
        if (DateTime.TryParse(Request["inputBirthDay"], out DateTime newUserBirthDay) && newUserName != null && newUserName != "")
        {
            userLogic.Add(new User() { Name = newUserName, DateOfBirth = newUserBirthDay });
            newUserId = userLogic.GetAll().ToList().LastOrDefault().Id;
            foreach (var item in Request.Form)
            {
                elem = item as string;
                if(uint.TryParse(elem, out uint awardId)&&elem!=null)
                {
                    userLogic.GrantUserAwards(newUserId, awardId);
                }
            }
        }
        Response.Redirect("~/index");


    }
}
<!DOCTYPE html>

<html>
<head>
    @RenderPage("~/Pages/_HeaderLayout.cshtml")
    <title>@PageTitle</title>
</head>
<body>
    @RenderPage("~/Pages/_BodyLayout.cshtml")
    <!--Content section-->
    <form action="~/AddUser.cshtml" method="post" class="form-edit">
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="inputName">
            </div>
            <div class="form-edit-alert alert alert-danger col-xs-6">!!!</div>
        </div>
        <div class="form-group row">
            <label for="inputBirthDay" class="col-sm-2 col-form-label">BirthDay</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" name="inputBirthDay" required>
            </div>
        </div>

        <fieldset class="form-group">
            <div class="row">
                <legend class="col-form-label col-sm-2 pt-0">Awards</legend>
                <div class="col-sm-10">
                    @{var result = awardLogic.GetAll().ToList();}
                    @foreach (var item in result)
                    {
                        <div class="form-group form-check">
                            <input class="form-check-input" type="checkbox" value="" name="@item.Id">
                            <label class="form-check-label" for="@item.Id">
                                @item.Name
                            </label>
                        </div>
                    }
                </div>
            </div>
        </fieldset>

        <button type="submit" class="btn btn-primary mb-2 submit-form">Create new user</button>
    </form>
    <a href="/"><div class="btn btn-info">Back to users</div></a>

    <!--Content section-->
    @RenderPage("~/Pages/_FooterLayout.cshtml")
    <script src="~/Scripts/app/js.js"></script>
    <script src="~/Scripts/app/validation.js"></script>
</body>
</html>